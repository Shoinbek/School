<script>
  document.addEventListener("DOMContentLoaded", function () {
    var navbarToggler = document.querySelector(".navbar-toggler");
    var navbarCollapse = document.querySelector("#navbarNavDropdown");
    
    // Add event listeners for each dropdown header
    var dropdownHeaders = document.querySelectorAll('.nav-item.dropdown .nav-link.dropdown-toggle');
    
    dropdownHeaders.forEach(function(header) {
      header.addEventListener('mouseenter', function(event) {
        var dropdownMenu = header.nextElementSibling;
        var isDropdownOpen = header.classList.contains('show');

        // Close all other dropdowns
        dropdownHeaders.forEach(function(otherHeader) {
          if (otherHeader !== header && otherHeader.classList.contains('show')) {
            otherHeader.classList.remove('show');
            otherHeader.nextElementSibling.classList.remove('show');
          }
        });

        // Toggle the dropdown
        if (!isDropdownOpen) {
          header.classList.add('show');
          dropdownMenu.classList.add('show');
        }
      });

      header.addEventListener('mouseleave', function(event) {
        var dropdownMenu = header.nextElementSibling;
        header.classList.remove('show');
        dropdownMenu.classList.remove('show');
      });
    });

    navbarToggler.addEventListener("click", function () {
      if (navbarCollapse.classList.contains("show")) {
        navbarCollapse.classList.remove("show");
        // Close all dropdowns when the navbar is collapsed
        dropdownHeaders.forEach(function(header) {
          header.classList.remove('show');
          header.nextElementSibling.classList.remove('show');
        });
      } else {
        navbarCollapse.classList.add("show");
      }
    });

    document.addEventListener('click', function () {
      // Close all dropdowns when clicking outside the navbar
      dropdownHeaders.forEach(function(header) {
        header.classList.remove('show');
        header.nextElementSibling.classList.remove('show');
      });
    });
  });
</script>

